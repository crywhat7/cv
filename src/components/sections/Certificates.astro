---
import Section from "../Section.astro";

import { certificates } from "../../../cv.json";
---

<Section title="Certificados">
  <ul
    class="grid grid-cols-1 md:grid-cols-[repeat(auto-fit,minmax(200px,1fr))] gap-4 -mx-4 sm:mx-0"
  >
    {
      certificates.map(({ date, issuer, name, url }) => {
        return (
          <li>
            <article class="border border-gray-200 rounded-lg p-4 h-full flex flex-col gap-4 shadow-none border-none md:border-solid md:shadow-sm">
              <header class="flex-1">
                <h3 class="mb-1 text-black font-bold">
                  <a
                    href={url}
                    title={`Ver el proyecto ${name}`}
                    target="_blank"
                    class="text-black hover:underline"
                  >
                    {name}
                  </a>
                </h3>
              </header>
              <footer class="flex flex-wrap gap-1 text-[0.6rem]">
                <span class="bg-gray-200 text-black font-medium py-1 px-2 rounded-md">
                  {date}
                </span>
                <span class="bg-gray-200 text-black font-medium py-1 px-2 rounded-md">
                  {issuer}
                </span>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>
