---
import Section from "../Section.astro";

import { projects } from "../../../cv.json";
---

<Section title="Proyectos">
  <ul
    class="grid grid-cols-1 md:grid-cols-[repeat(auto-fit,minmax(200px,1fr))] gap-4 -mx-4 sm:mx-0 mt-3"
  >
    {
      projects.map(({ url, description, highlights, name, isActive }) => {
        return (
          <li>
            <article class="border border-none border-gray-200/70 rounded-lg p-4 h-full flex flex-col gap-4 shadow-none md:shadow-sm md:border-solid">
              <header class="flex-1">
                <h3 class="mb-1 text-black font-bold text-lg">
                  {!url ? (
                    name
                  ) : (
                    <a
                      href={url}
                      title={`Ver el proyecto ${name}`}
                      target="_blank"
                      class="text-black hover:underline"
                    >
                      {name}
                    </a>
                  )}
                  {isActive && <span class="text-green-500">â€¢</span>}
                </h3>
                <p class="text-sm text-gray-500 leading-snug mb-1">
                  {description}
                </p>
              </header>
              <footer class="flex flex-wrap gap-1 text-[0.6rem]">
                {highlights.map((highlight) => {
                  return (
                    <span class="bg-gray-200/70 hover:bg-gray-200 transition-colors duration-300 text-black font-medium py-1 px-2 rounded-md">
                      {highlight}
                    </span>
                  );
                })}
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>
