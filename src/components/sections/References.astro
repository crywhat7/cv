---
import Section from "../Section.astro";

import { references } from "../../../cv.json";
---

<Section title="Referencias">
  <ul class="flex flex-col gap-8">
    {
      references.map(({ name, reference }) => {
        return (
          <li>
            <article>
              <header class="flex gap-4 justify-between">
                <h3 class="text-lg hover:underline">{name}</h3>
              </header>

              <footer>
                <p class="mt-1">{reference}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>
